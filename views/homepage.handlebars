<div class="top-container">
  <h1 class="container text-center">CodeTechChitChat</h1>
  <p></p>
</div>

<div class="p-3 mb-3 header" id="myHeader">
  <ul class="nav container justify-content-center">
    <li class="nav-item">
      <a
        class="nav-link active homeBtn text-white"
        id="homeBtn"
        aria-current="page"
        href="/homepage"
      >Home</a>
    </li>
    <li class="nav-item">
      <a
        class="nav-link dashboardBtn text-white"
        id="dashboardBtn"
        href="/dashboard"
      >Dashboard</a>
    </li>
    <li class="nav-item">
      <a
        class="nav-link logoutBtn text-white"
        id="logoutBtn"
        href="/"
      >Logout</a>
    </li>
  </ul>
</div>
<div class="content">
  {{#each blogs as |blog|}}

    <div class="d-flex justify-content-md-center mx-auto py-3">
      <div class="card col-6 justify-content-md-center">
        <div class="card-header">
          <h1>{{blog.title}}</h1>
        </div>
        <div class="card-body">
          <blockquote class="blockquote mb-3">
            <p>
              {{blog.content}}
            </p>
            <footer class="blockquote-footer mb-3">
              {{blog.user_name}}
            </footer>
          </blockquote>
          {{! <a class="text-dark font-weight-bold replies" href="/discussion">Click
            here to see replies to this post</a> }}
          <form
            {{! action="replyForm" }}
            class="border-bottom border-dark replyToBlog"
          >
            <p>Write your comment below:</p>
            <textarea
              class="mb-3 replyToBlog"
              name="replyToBlog"
              id="reply"
              cols="88"
              rows="2"
            ></textarea>
            <button
              type="submit"
              id="postBlogBtn"
              class="mb-3 btn btn-primary replyBtn"
            >
              Reply
            </button>
          </form>
          <h3 class="text-info">Post Comments</h3>
          <p>{{blog.comment}}</p>
        </div>
      </div>
    </div>

  {{/each}}
</div>

<footer class="text-center">CodeTechChitChat &copy; - The best place on the
  internet to discuss coding tech</footer>

<script src="/js/homepage.js"></script>